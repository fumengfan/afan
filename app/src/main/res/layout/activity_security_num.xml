<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="80dp"
    tools:context=".securityNumActivity">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:text="请输入安全手机号："/>
    <EditText
        android:id="@+id/security_num"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="提醒：安全手机号为 当防盗手机被替换sim卡时，发送短信到安全手机，再由安全手机进行相关的防盗功能"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        >
        <ImageView
            android:id="@+id/security_num_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/a_left"/>
        <ImageView
            android:id="@+id/security_num_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/a_right"/>
    </RelativeLayout>
</LinearLayout>